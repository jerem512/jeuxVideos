{% extends 'base.html.twig' %}

{% block title %}Wilkommen{% endblock %}

{% block body %}
<h1>Connexion</h1>

<form action="{{path('s_login')}}" method="post">
	<div class="form-group">
		<input placeholder ="Veuillez renseigner votre pseudo" required name="_username" type="text" class="form-control">
	</div>
	<div class="form-group">
		<input placeholder ="Veuillez renseigner votre mot de passe" required name="_password" type="password" class="form-control">
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-primary">Connexion</button>
	</div>
</form>

<p>Pas encore inscrit? <a href="{{path('register')}}">Ne perd pas une minute!</a></p>
{% endblock %}
