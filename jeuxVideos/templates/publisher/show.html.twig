{% extends 'base.html.twig' %}

{% block title %}Publisher{% endblock %}

{% block body %}
    <h1>Publisher</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publisher.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ publisher.name }}</td>
            </tr>
            <tr>
                <th>DateOfCreation</th>
                <td>{{ publisher.dateOfCreation ? publisher.dateOfCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>WebSiteLink</th>
                <td>{{ publisher.webSiteLink }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('publisher_index') }}">back to list</a>

    <a href="{{ path('publisher_edit', {'id': publisher.id}) }}">edit</a>

